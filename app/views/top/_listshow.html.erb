<ul class="media-list">
           <%  @items.first(10).each do |item| %>
               <div class="well">
                 <li class="media">
          
                    <div class="media-left">
                      <% if item['mediumImageUrls'].present? %>
                            <% imgurl = item['mediumImageUrls'].first["imageUrl"] %>
                            <%= link_to image_tag(imgurl) , item['itemUrl'] , target: '_blank'%>
                      <% end %>
                    </div>
        
                    <div class="media-body">
                    <h4 class="media-heading"><%= link_to item['itemName'] , item['itemUrl'] ,target: '_blank'%></h4>
                    <%= item['catchcopy'] %>
                    <p style="text-align: right;">
                        <%= link_to "商品の詳細を詳しく見る" , item['itemUrl'] , { :class => "btn btn-info" , :target=>["_blank"]} %>
                    </p>
                    </div>
                 </li>
                </div>
            <% end %>
</ul>

